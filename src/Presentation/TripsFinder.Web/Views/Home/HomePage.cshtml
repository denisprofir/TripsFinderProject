    <script>
        $(window).scroll(function () {
            $('nav').toggleClass('scrolled', $(this).scrollTop() > 50);
        });

        // Auto resize input
        function resizeInput() {
            $(this).attr('size', $(this).val().length);
        }

        $('input[type="text"], input[type="email"]')
            .keyup(resizeInput)
            .each(resizeInput);

        (function () {

            var textareas = document.querySelectorAll('.align-top'),

                resize = function (t) {
                    t.style.height = 'auto';
                    t.style.overflow = 'hidden';
                    t.style.height = (t.scrollHeight + t.offset) + 'px';
                    t.style.overflow = '';
                },

                attachResize = function (t) {
                    if (t) {
                        console.log('t.className', t.className);
                        t.offset = !window.opera
                            ? (t.offsetHeight - t.clientHeight)
                            : (t.offsetHeight +
                                parseInt(window.getComputedStyle(t, null).getPropertyValue('border-top-width')));

                        resize(t);

                        if (t.addEventListener) {
                            t.addEventListener('input', function () { resize(t); });
                            t.addEventListener('mouseup', function () { resize(t); });
                        }

                        t['attachEvent'] && t.attachEvent('onkeyup', function () { resize(t); });
                    }
                };

        })();

